FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Use the shared virtual environment from parent directory
ENV PATH="/moneytrailz-system/.venv/bin:$PATH"
ENV PYTHONPATH="/app:/moneytrailz-system"

# Copy and install requirements (some packages might already be in shared .venv)
COPY requirements.txt .
RUN pip install -r requirements.txt

# Copy application code
COPY . .

# Expose port
EXPOSE 8000

# Start the FastAPI application
CMD ["uvicorn", "app.main:socket_app", "--host", "0.0.0.0", "--port", "8000", "--reload"] 
